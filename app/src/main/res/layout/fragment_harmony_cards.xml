<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ic_background_first">

    <TextView
        android:id="@+id/tv_harmony_chk_cards"
        style="@style/Roboto.White.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:lineSpacingMultiplier="1.28"
        android:text="@string/harmony_checking" />

    <TextView
        android:id="@+id/tv_cards_chk_title"
        style="@style/Roboto.White.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_harmony_chk_cards"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.18"
        android:text="@string/harmony_checking_cards_title" />

    <com.unitalk.utils.customview.MoodCardView
        android:id="@+id/custom_mood_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_cards_chk_title"
        android:layout_margin="16dp"
        android:orientation="vertical" />
</RelativeLayout>